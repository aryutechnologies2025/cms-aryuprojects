{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ configuration.label|replace({' ': '-'})|lower,
    attributes.id,
    'block-' ~ plugin_id|clean_class,
  ]
%}

<div{{attributes.addClass(classes)}}>
  {{ title_prefix }}
  {{ title_suffix }}

  {% block content %}
    <div class="city-service-blurb-wrap">
      {{ content|without('field_options', 'field_right_image', 'field_ref_service', 'field_image_blurb') }}
    </div>

    {% if content.field_options[0]['#markup'] == 'concerns' %}
      <div class="block city-service-blurb-sidebar option-concern">
        <div class="block concern-wrap bg-light">
          {% set serviceID = content.field_ref_service[0]|render|striptags|spaceless %}
          {{ drupal_view('concerns', 'block_concerns_blurb', serviceID) }}
        </div>
      </div>
    {% elseif content.field_options[0]['#markup'] == 'image_right' %}
      <div class="block city-service-blurb-sidebar option-image">
        {{ content.field_image_blurb }}
      </div>
    {% endif %}
  {% endblock %}
</div>
