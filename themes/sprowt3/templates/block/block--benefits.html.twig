{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ configuration.label|replace({' ': '-'})|lower,
    attributes.id,
    'block-' ~ plugin_id|clean_class,
    content.field_layout_benefits[0]['#markup'],
  ]
%}

<div{{attributes.addClass(classes)}}>
  {{ title_prefix }}
  {{ title_suffix }}
  {% block content %}
    <div class="basic-wrap">
      {{ content|without('field_count_benefit','field_benefit_overrides','field_layout_benefits') }}

      {% if content.field_benefit_overrides|render %}
        {{ content.field_benefit_overrides }}
      {% else %}
        {{ drupal_view((subsite == '_main' ? 'benefits' : 'benefits_subsite'), 'block_compact', 'teaser', content.field_count_benefit.0['#markup']) }} 
      {% endif %}
    </div>
  {% endblock %}
</div>
