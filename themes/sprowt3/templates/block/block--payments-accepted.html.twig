{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ configuration.label|replace({' ': '-'})|lower,
    attributes.id,
    'block-' ~ plugin_id|clean_class
  ]
%}

<div{{attributes.addClass(classes)}}>
  {{ title_prefix }}
  {{ title_suffix }}

  {% block content %}
      {{ content|without('field_payment_types','field_label','field_hide_label') }}
      <div class="payments-wrap" aria-label="{{ content.field_label[0] }}">
        {% if content.field_hide_label[0]['#markup'] == 0 %}
          {{ content.field_label }} 
        {% endif %}
        <div class="payment-types">
          {% for item in content.field_payment_types %}
            {% if item["#markup"] is not empty %}
              <span class="payment-item"><img class="payment-icon" src="/themes/sprowt3/assets/payment/{{ item["#markup"]|lower|replace({' ':'-'}) }}.png" title="{{ item["#markup"] }}" /></span>
            {% endif %}
          {% endfor %}
        </div>
      </div>
  {% endblock %}
</div>
