{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div class="region-blocks-wrap">
      {% if sprowt_theme_get_setting('logo_reverse') is not empty %}
        <div class="block block-system block-site-branding block-footer-logo">
          <a href="/" rel="home" class="site-logo">
            <img {% if sprowt_theme_get_setting('logo_reverse.width') is not empty %}width="{{ sprowt_theme_get_setting('logo_reverse.width') }}"{% endif %} src="{{ sprowt_theme_get_setting('logo_reverse') }}" alt="{{ drupal_config('system.site', 'name') }}">
          </a>
        </div>
      {% endif %}
      {{ content }}
    </div>
  </div>
{% endif %}
