{%
  set classes = [
    'node',
    'node-' ~ node.id,
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('classy/node') }}
<article{{attributes.addClass(classes).removeAttribute('role')}}>
  {{ title_prefix }}
  {{ title_suffix }}
  <div{{content_attributes.addClass('node__content')}}>
      <div class="node__content">
        <fieldset class="js-form-item form-item js-form-wrapper form-wrapper">
          <legend>
            <span class="fieldset-legend">Address</span>
          </legend>
          <div class="fieldset-wrapper">
            {% apply spaceless %}
            {% if industry is not empty %}
              {% set industryName = drupal_field('name', 'taxonomy_term', industry)|render|striptags|spaceless %}
            {% else %}
              {% set industryName = '' %}
            {% endif %}
            {# Loop through paragraph to set city link (linkURL) #}
            {% set linkURL = '' %}
            {% for key, item in content.field_industry_page_links %}
              {% if key|first != '#' %}
                {% set termID = content.field_industry_page_links[key]["#paragraph"].field_industry[0].entity.tid.value %}
                {% if termID == industry %}
                  {% set linkURL = content.field_industry_page_links[key]["#paragraph"].field_page_link.0.url %}
                {% endif %}
              {% endif %}
            {% endfor %}
            {% apply spaceless %}
              {% if linkURL != '' %}
                <a href="{{ linkURL }}">{{ content.field_city }}</a>
              {% else %}
                {{ content.field_city }}
              {% endif %}
            {% endapply %}
            {% endif %}
            {% endapply %}

            {{ content.field_state }}
            {{ content.field_zip }}
            {% if content.field_phone[0] is not empty %}
            <div class="field field--name-field-phone field--type-telephone field--label-hidden field__item">
              {{ content.field_phone[0] }}
            </div>
            {% endif %}
          </div>
        </fieldset>
        <fieldset class="js-form-item form-item js-form-wrapper form-wrapper">
          <legend>
            <span class="fieldset-legend">Hours</span>
          </legend>
          <div class="fieldset-wrapper">
            {{ content.field_hours }}
          </div>
      </fieldset>
    </div>
  </div>

</article>
