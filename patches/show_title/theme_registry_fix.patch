+function _show_title_get_base_theme_node_template($themeName) {
+  $module_path = \Drupal::service('extension.list.module')->getPath('show_title');
+  $templatePath = implode('/',
+    [$module_path, 'templates', $themeName]
+  );
+  if(!is_dir($templatePath)) {
+    $theme = \Drupal::service('theme_handler')->getTheme($themeName);
+    if(!empty($theme->base_theme)) {
+      return _show_title_get_base_theme_node_template($theme->base_theme);
+    }
+    else {
+      return _show_title_get_base_theme_node_template('stable');
+    }
   }
+  return $templatePath;
 }
